<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/home_cell"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/toolbar_bg"
        android:gravity="center"
        android:theme="@style/ToolbarStyle">


        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pala"
            android:gravity="center_vertical"
            android:text="@string/dual_quiz"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btn_easy"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/ic_learn"
                android:src="@drawable/easy"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableRight="@drawable/ic_arrow_frwd"
                android:textSize="@dimen/_17sdp"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/palab"
                android:text="@string/easy"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"

                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_easy"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_below="@id/btn_easy"
            android:gravity="center"
            android:id="@+id/btn_medium"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/ic_play"
                android:src="@drawable/medium"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableRight="@drawable/ic_arrow_frwd"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/palab"

                android:text="@string/medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_17sdp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_medium"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_below="@id/btn_medium"
            android:gravity="center"
            android:id="@+id/btn_hard"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/ic_dual_quiz"
                android:src="@drawable/old"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableRight="@drawable/ic_arrow_frwd"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/palab"

                android:text="@string/hard"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_17sdp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_hard"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>



    </LinearLayout>
</LinearLayout>