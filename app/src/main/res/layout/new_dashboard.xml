<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:background="@drawable/home_cell"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:fontFamily="@font/palab"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/app_name"
        android:drawableBottom="@drawable/play"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size" />


    <RelativeLayout
       android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/btn_table_quiz"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/ic_learn"
                android:src="@drawable/learn"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableRight="@drawable/ic_arrow_frwd"
                android:textSize="@dimen/_17sdp"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                 android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/palab"
                android:text="@string/learn"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"

                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_table_quiz"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_below="@id/btn_table_quiz"
            android:gravity="center"
            android:id="@+id/btn_learn_quiz"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/ic_play"
                android:src="@drawable/play"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableRight="@drawable/ic_arrow_frwd"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/palab"

                android:text="@string/play"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_17sdp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_learn_quiz"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_below="@id/btn_learn_quiz"
            android:gravity="center"
            android:id="@+id/btn_dual_quiz"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/ic_dual_quiz"
                android:src="@drawable/duel"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableRight="@drawable/ic_arrow_frwd"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/palab"

                android:text="@string/dual_quiz"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_17sdp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_dual_quiz"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_below="@id/btn_dual_quiz"
            android:gravity="center"
            android:id="@+id/btn_pythagoran"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/ic_pyth"
                android:src="@drawable/pythagoram"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableRight="@drawable/ic_arrow_frwd"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/palab"

                android:lineSpacingExtra="2dp"
                android:text="@string/pythagoran_table"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_17sdp"
                app:autoSizeTextType="uniform" />


        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_pythagoran"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:text="Powered by ProceeddInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:padding="15dp"
            android:scaleX="-1"
            android:src="@drawable/setting_1" />

    </RelativeLayout>

</RelativeLayout></layout>